@model OPS.Models.OPSContext.Product
@{
    ViewBag.Title = "新增商品";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">新增商品</h1>
    </div>
</div>
@using (Html.BeginForm("Create", "ProductCategory", FormMethod.Post))
{
    <div class="form-group">
        <label>@Html.DisplayNameFor(x => x.ProductId)</label>
        @Html.TextBoxFor(m => m.ProductId, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(x => x.ProductName)</label>
        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", @maxlength = "30" })
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(x => x.PDCategoryId)</label>
        @Html.TextBoxFor(m => m.PDCategoryId, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(x => x.ImageURL)</label>
        @Html.TextBoxFor(m => m.ImageURL, new { @class = "form-control", @maxlength = "30" })
        <p class="help-block">*必填</p>
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(x => x.RegularPrice)</label>
        @Html.TextBoxFor(m => m.RegularPrice, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
    <hr />
    <div class="row">
        <div class="col-md-2">
            <input type="submit" class="btn btn-info" value="新增" />
        </div>
    </div>

}