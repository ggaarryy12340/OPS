@model OPS.Models.OrderToPickingParameters
@{
    ViewBag.Title = "訂單製揀貨單";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">訂單製揀貨單</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm("Index", "OrdersToPickings", FormMethod.Post))
        {
            <div class="form-group">
                <label>@Html.DisplayNameFor(x => x.OrderStartAt)</label>
                @Html.TextBoxFor(m => m.OrderStartAt, new { @class = "form-control OPS-datepicker" }) @Html.ValidationMessageFor(model => model.OrderStartAt, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(x => x.OrderEndAt)</label>
                @Html.TextBoxFor(m => m.OrderEndAt, new { @class = "form-control OPS-datepicker" }) @Html.ValidationMessageFor(model => model.OrderEndAt, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(x => x.Distributor)</label>
                @Html.DistributorHelperFor(x => x.Distributor, new { @class = "form-control" }) @Html.ValidationMessageFor(model => model.Distributor, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(x => x.DeliveryWay)</label>
                @Html.DeliveryWayHelperFor(x => x.DeliveryWay, new { @class = "form-control" }) @Html.ValidationMessageFor(model => model.DeliveryWay, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(x => x.OrderStatus)</label>
                @Html.TextBoxFor(m => m.OrderStatus, new { @class = "form-control", @Value = "訂單成立", @disabled = true}) @Html.ValidationMessageFor(model => model.OrderStatus, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(x => x.OrdersPerPicking)</label>
                @Html.TextBoxFor(m => m.OrdersPerPicking, new { @class = "form-control", @Value = "5" }) @Html.ValidationMessageFor(model => model.OrdersPerPicking, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-success">製單</button>
        }
    </div>
</div>

<script type="text/javascript">

    $(function () {
        $(".OPS-datepicker").datepicker();
    });

</script>
