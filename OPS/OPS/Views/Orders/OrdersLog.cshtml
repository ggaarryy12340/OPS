@model OPS.Models.OPSContext.OrderStatusLog
@{
    ViewBag.Title = "Log";
}


<div class="col-lg-12">
    <h1 class="page-header">歷程表</h1>
</div>

<div class="col-lg-12" style="margin-bottom:50px;">
    <h5>訂單編號:@Model.OrderId</h5>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped" style="border:1px solid black">
            <thead>
                <tr style="background-color:#dddddd;">
                    <th style="width:20%; text-align:center; border:1px solid #999999;">歷程</th>
                    <th style="width:20%; text-align:center; border:1px solid #999999;">訂單成立時間</th>
                    <th style="width:20%; text-align:center; border:1px solid #999999;">揀貨中時間</th>
                    <th style="width:20%; text-align:center; border:1px solid #999999;">待出貨時間</th>
                    <th style="width:20%; text-align:center; border:1px solid #999999;">已出貨時間</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="text-align:center; border:1px solid #999999;">日期</td>
                    <td style="text-align:center; border:1px solid #999999;">@Model.OrderCreateTime</td>
                    <td style="text-align:center; border:1px solid #999999;">@Model.OrderPickingTime</td>
                    <td style="text-align:center; border:1px solid #999999;">@Model.OrderAlreadyTime</td>
                    <td style="text-align:center; border:1px solid #999999;">@Model.OrderDeliveryTime</td>
                </tr>

            </tbody>
        </table>
    </div>
</div>