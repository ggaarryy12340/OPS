@model OPS.Models.OPSContext.PDCategory
@{
    ViewBag.Title = "新增商品類別";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">新增商品類別</h1>
    </div>
</div>
@using (Html.BeginForm("Create", "ProductCategory", FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label>表單類別代碼</label>
                @Html.TextBoxFor(m => m.PDCategoryId, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>表單類別名稱</label>
                @Html.TextBoxFor(m => m.PDCategoryName, new { @class = "form-control", @maxlength = "30" })
                <p class="help-block">*必填</p>
            </div>
        </div>

    </div>

    <hr />
    <div class="row">
        <div class="col-md-2">
            <input type="submit" class="btn btn-info" value="新增" />
        </div>
    </div>

}