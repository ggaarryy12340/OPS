                        <li><a href="@Url.Action("Contact", "Home")"><span class="fa-stack fa-lg pull-left"><i class="fa fa-flag fa-stack-1x "></i></span>待取單</a></li>
                        <li><a href="@Url.Action("Contact", "Home")"><span class="fa-stack fa-lg pull-left"><i class="fa fa-flag fa-stack-1x "></i></span>待揀單</a></li>
                        <li><a href="@Url.Action("Contact", "Home")"><span class="fa-stack fa-lg pull-left"><i class="fa fa-flag fa-stack-1x "></i></span>待分單</a></li>
                    </ul>
                </li>
            </ul>
        </div><!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid xyz">
                <div class="container body-content" style="margin-top:50px;">
                    @RenderBody()
                </div>

                <hr />
                <footer style="text-align:center;">
                    <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
                </footer>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    //side bar
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    $("#menu-toggle-2").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled-2");
        $('#menu ul').hide();
    });

    function initMenu() {
        $('#menu ul').hide();
        $('#menu ul').children('.current').parent().show();
        //$('#menu ul:first').show();
        $('#menu li a').click(
          function () {
              var checkElement = $(this).next();
              if ((checkElement.is('ul')) && (checkElement.is(':visible'))) {
                  return false;
              }
              if ((checkElement.is('ul')) && (!checkElement.is(':visible'))) {
                  $('#menu ul:visible').slideUp('normal');
                  checkElement.slideDown('normal');
                  return false;
              }
          }
          );
    }
    $(document).ready(function () { initMenu(); });
</script>

